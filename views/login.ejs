<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>login </title>
    <link href="/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/mycss/form.css">
    <script src="/jquery.min.js"></script>
    <script src="/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js"></script>
    <script>
        $(document).ready(()=>{
            $("#login").on("click",()=>{
                var formData={
                    username:$("#username").val(),
                    password:$("#password").val()
                }
                $.post("/login",formData,(data,status)=>{
                    if(data==false){
                        $("#ulabel").html("Invalid credentials");
                    }
                    else if(data == "/user"){
                       window.location.href = data;
                    }
                    else
                       $("#ulabel").html("Something went wrong");
                });
            });
        });
    </script>
</head>
<body style="background-color: #e7e7e7;">
    <div class="container">
        <form class="form">
        <label style="font-size: 15px;color:red" id="ulabel"></label><br>
        <input type="text" class="form-control" id="username" placeholder="Username"><br>
        <input type="text" class="form-control" id="password" placeholder="Password"><br>
        <div class="btn btn-block" id="login">Log in</div>
        </form>
    </div>
</body>
</html>